<UserControl x:Class="CyberTools.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Border Width="750px"
                    Height="500px"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CornerRadius="15">
                <Border.Background>
                    <LinearGradientBrush x:Name="AnimatedGradient" StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="GradientStop1" Color="#007bff" Offset="0"/>
                        <GradientStop x:Name="GradientStop2" Color="#6200EE" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="CyberTools" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontSize="50"
                                    Foreground="White"
                                    Grid.Row="0"/>

                    <Image Width="350" 
                            Height="350"
                            Source="/Images/Mr-robot.jpg"
                            Grid.Row="1"
                            Margin="0,10,0,0"/>
                </Grid>

                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                
                                <ColorAnimation Storyboard.TargetName="GradientStop1" 
                                                Storyboard.TargetProperty="Color" 
                                                From="#007bff" To="#ff00ff" 
                                                Duration="0:0:50"/>
                               
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

            </Border>
        </Grid>
    </Grid>
</UserControl>
